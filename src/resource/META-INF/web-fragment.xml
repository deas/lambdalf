<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              version="3.0"
              id="module1">
    <servlet>
        <description>Ring Servlet</description>
        <display-name>Ring Servlet</display-name>
        <servlet-name>Ring Servlet</servlet-name>
        <servlet-class>contentreich.ring_servlet</servlet-class>
        <init-param>
            <param-name>base-path</param-name>
            <param-value>lambdalf</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ring Servlet</servlet-name>
        <url-pattern>/lambdalf/*</url-pattern>
    </servlet-mapping>
    <!--filter-mapping>
        <filter-name>Global Authentication Filter</filter-name>
        <servlet-name>Ring Servlet</servlet-name>
    </filter-mapping-->
</web-fragment>